@model CrimeAlert.Models.ViewModel.LoginSignupViewModel@*@model CrimeAlert.Models.Users*@@{    ViewData["Title"] = "Signup | Legal buzzer";}<!DOCTYPE html><html><head>    <meta name="viewport" content="width=device-width, initial-scale=1.0">    <title>Signup | Legal Buzzer</title>    <link rel="stylesheet" href="~/css/loginsignup.css">    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>    <script defer src="~/js/Scriptslogin.js"></script>    <script src="https://kit.fontawesome.com/463b079c62.js" crossorigin="anonymous"></script></head><body>    <div class="container">        <div class="form-box">            <h2>Legal Buzzer</h2>            <h1>Sign up</h1>            <div id="errorMsg" style="color:azure"></div>            <form class="signup" id="signupform" name="signupForm" onsubmit="return validateSignupForm()" method="post" asp-controller="SignupLogin" asp-action="Signup1">                   <label asp-for="IsAdmin" class="role" required></label>                <select class="form-control" asp-for="IsAdmin" id="role">                    <option value="1">Yes</option>                    <option value="0">No</option>                </select>                <div class="input-group">                    <div class="input-field">                    <i class="fa-solid fa-user"></i>                    <input id="username" type="text" asp-for="UserName" placeholder="User name" required>                    </div>                    <div class="input-field">                        <i class="fa-solid fa-user"></i>                        <input id="name" type="text" asp-for="FullName" placeholder="Full Name" required>                    </div>                    <div class="input-field">                        <i class="fa-solid fa-envelope"></i>                        <input id="email" type="email" asp-for="EmailId" placeholder="Email" required>                    </div>                    <div class="input-field">                        <i class="fa-solid fa-phone"></i>                        <input id="phonenumber"type="tel" asp-for="PhoneNo" placeholder="Phone Number" value="+" required>                    </div>                    <div class="input-field" style="position: relative;">                        <i class="fa-solid fa-lock" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%);"></i>                        <input id="password" type="password" asp-for="Password" placeholder="Password" required>                        <i class="fa-solid fa-eye" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);" id="show-password"></i>                    </div>                    <div class="input-field">                        <i class="fa-solid fa-lock"></i>                        <input id="confirmpassword" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required>                    </div>                    <p>Already have an Account? <a href="login">Click Here!</a></p><br />                    <div class="btn-field">                        <button type="submit" onclick="validateSignupForm()" id="button-sign-up">Sign Up</button>                        @if (TempData["errorMessage"] != null)
                        {                                     <div style="color:red;font-weight:bold">@TempData["errorMessage"]</div>                        }                     </div>                </div>            </form>        </div>    </div></body></html>